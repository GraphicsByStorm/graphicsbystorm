---
import LogoAsync from "$components/LogoAsync.astro";

/* Link to pages, not #ids (sections can still have their own internal "Show all" CTAs) */
const leftLinks = [
  { href: "/", label: "Home" },
  { href: "/case-studies", label: "Work" },
  { href: "/about", label: "About" },
];

const rightLinks = [
  { href: "/services", label: "Services" },
  { href: "/faq", label: "FAQ" },
  // { href: "/shop", label: "Shop" }, // removed per your plan
  { href: "/contact", label: "Contact" },
];
---

<header class="sticky header-surface noise-overlay">
  <nav class="header-inner" aria-label="Primary">
    <div class="header-bar">
      <!-- Left (desktop) -->
      <ul class="hidden md:flex items-center gap-6">
        {
          leftLinks.map((item) => (
            <li>
              <a href={item.href} class="nav-link">
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>

      <!-- Center logo -->
      <div class="justify-self-center">
        <LogoAsync href="/" class="h-8 w-auto mt-[2px]" />
      </div>

      <!-- Right (desktop) -->
      <div class="hidden md:flex items-center gap-4 justify-self-end">
        <ul class="flex items-center gap-6">
          {
            rightLinks.map((item) => (
              <li>
                <a href={item.href} class="nav-link">
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Mobile: single-row rail -->
      <div class="md:hidden flex items-center gap-3 justify-self-end">
        <div class="nav-rail">
          <ul class="flex items-center gap-3">
            {
              [...leftLinks, ...rightLinks].map((item) => (
                <li>
                  <a
                    href={item.href}
                    class="text-xs text-neutral-300 hover:text-white whitespace-nowrap px-2 py-1.5 rounded"
                  >
                    {item.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>
