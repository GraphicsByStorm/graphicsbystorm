---
import ContactForm from "$svelte/components/ContactForm.svelte";
const leftRail = "96px";
const cta = {
  heading: "Start a project",
  blurb: "Share a few details and Iâ€™ll reply with next steps.",
};
---

<section id="contact" class="section bg-[var(--surface-0,#0a0a0a)]">
  <div class="mx-auto max-w-6xl px-4 py-12 sm:py-14 lg:py-16">
    <!-- Contained header (optional extra copy above the filmstrip card) -->
    <div class="mb-4">
      <h2
        class="text-[clamp(1.15rem,2vw,1.35rem)] font-extrabold tracking-tight text-white flex items-center gap-2"
      >
        <span
          class="inline-block h-3 w-1.5"
          style="background: var(--color-brand-500,#E2A028);"></span>
        Contact
      </h2>
    </div>

    {/* Filmstrip-style contact block */}
    <ContactForm
      client:load
      leftRail={leftRail}
      heading={cta.heading}
      blurb={cta.blurb}
    />
  </div>
</section>
