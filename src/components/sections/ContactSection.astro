---
import ContactForm from "$svelte/components/ContactForm.svelte";
export const prerender = true;

// Optional: customize copy for the section
const heading = "Start a project";
const blurb =
  "Tell me about your project—goals, audience, constraints—and I’ll reply within 1–2 business days.";

// Replace with your Formspree/Getform/Basin endpoint:
const endpoint = "https://formspree.io/f/your-id";
---

<section id="contact" class="section bg-[var(--surface-0,#0a0a0a)]">
  <ContactForm client:load {endpoint} leftRail="96px" {heading} {blurb} />
</section>
