<section id="contact" class="section-wrap">
  <h2 class="heading-2 mb-4">Contact</h2>
  <form method="post" action="/api/contact" class="card-grunge p-5 space-y-4">
    <div class="grid sm:grid-cols-2 gap-4">
      <input name="name" placeholder="Your name" class="input" required />
      <input name="email" type="email" placeholder="Email" class="input" required />
    </div>
    <input name="phone" placeholder="Phone (optional)" class="input" />
    <input name="subject" placeholder="Project subject" class="input" />
    <textarea name="message" placeholder="Tell me about your projectâ€¦" class="textarea" required></textarea>
    <button class="btn-primary hover-lift">Send</button>
  </form>
</section>
