---
const faqs = [
    { q: 'What’s your typical turnaround?', a: 'Wireframe content. Final copy TBD.' },
    { q: 'Do you offer expedited projects?', a: 'Wireframe content. Final copy TBD.' },
    { q: 'What files do I receive?', a: 'Wireframe content. Final copy TBD.' },
];
const name = 'faq-accordion';
---
<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 space-y-3">
    {faqs.map((f, i) => (
        <div class="group rounded-lg border border-white/10 overflow-hidden">
            <input id={`f${i}`} class="peer hidden" type="radio" name={name} />
            <label for={`f${i}`} class="flex items-center gap-3 px-4 py-3 cursor-pointer select-none hover:bg-white/10">
                <span class="transition-transform peer-checked:rotate-90 group-hover:rotate-90">›</span>
                <span class="text-neutral-200">{f.q}</span>
            </label>
            <div class="max-h-0 overflow-hidden transition- duration-300 peer-checked:max-h-40" max-height="">
                <div class="px-9 pb-4 text-neutral-300">{f.a}</div>
            </div>
        </div>
    ))}
</div>