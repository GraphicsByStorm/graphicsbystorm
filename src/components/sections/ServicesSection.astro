---
const services = [
  { title: "Brand Identity", blurb: "Logo, palette, type, usage.", price: "$1,200" },
  { title: "Web Design", blurb: "High-conversion marketing sites.", price: "$1,800" },
  { title: "Motion Graphics", blurb: "Promo edits & animations.", price: "$900" },
];
---
<section id="services" class="section-wrap">
  <h2 class="heading-2 mb-6">Services</h2>
  <div class="grid gap-6 md:grid-cols-2 xl:grid-cols-3">
    {services.map((s) => (
      <article class="card-grunge hover-lift p-5">
        <h3 class="text-lg font-semibold">{s.title}</h3>
        <p class="text-neutral-400 mt-1">{s.blurb}</p>
        <div class="mt-4 text-2xl font-bold">{s.price}</div>
        <div class="mt-4 flex gap-2">
          <a href="#contact" class="btn-primary">Start</a>
          <a href="#faq" class="btn-ghost">Details</a>
        </div>
      </article>
    ))}
  </div>
</section>
