---
import profileUrl from '$assets/profile.jpg';
import { Image } from 'astro:assets';

const badges = [
    { cat: 'Frameworks', items: ['Astro', 'Svelte (Runes)', 'React'] },
    { cat: 'Languages', items: ['HTML', 'CSS', 'JavaScript', 'TypeScript', 'Lua', 'Rust'] },
    { cat: 'Design', items: ['Affinity Suite', 'Adobe Creative Suite', 'Figma'] },
    { cat: '3D Modeling', items: ['Blender', 'Cinema 4D'] },
    { cat: 'Video Editing', items: ['DaVinci Resolve', 'Adobe PremierePro', 'Sony Vegas'] },
];
---
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
        <div class="aspect-square bg-neutral-900 rounded-xl overflow-hidden">
            <Image src={profileUrl} alt="Profile Picture" class="size-full object-cover"/>
        </div>
        <div class="space-y-a">
            <div class="h-8 bg-neutral-900 rounded" />
            <div class="h-8 bg-neutral-900 rounded" />
            <div class="h-8 bg-neutral-900 rounded" />
        </div>
    </div>

    <div class="mt-10 max-w-3xl">
        <div class="h-24 bg-neutral-900 rounded" />
    </div>

    <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {badges.map((b) => (
            <div class="rounded-lg border border-white/10 p-4">
                <div class="text-xs uppercase tracking-wider text-neutral-400 mb-2">{b.cat}</div>
                <div class="flex flex-wrap gap-2">
                    {b.items.map((t) => (
                        <span class="text-xs px-2 py-1 rounded-full border border-white/15 text-neutral-300">{t}</span>
                    ))}
                </div>
            </div>
        ))}
    </div>
</div>