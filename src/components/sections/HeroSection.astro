---
const title = "GraphicsByStorm";
const tagline = "Design that reads fast, feels premium, and ships clean.";
// Swap to your hero asset (ensure it exists in /public/images/hero/)
const bg = "/images/hero.jpg";
---

<!-- Full-bleed hero, fixed ~320px tall, no rounded corners -->
<section class="group row-bleed relative isolate bg-black" style="--row-h: 320px;">
  <!-- Background image -->
  <div
    class="absolute inset-0 z-0 bg-no-repeat bg-cover bg-center"
    style={`background-image:url('${bg}')`}
  />

  <!-- Subtle veil -->
  <div class="veil z-[4]" />

  <!-- Content -->
  <div class="absolute inset-0 z-10 px-4 sm:px-6">
    <div class="mx-auto max-w-6xl h-full flex flex-col justify-center">
      <h1 class="section-hdr text-[clamp(1.6rem,3vw,2.2rem)] mb-2">
        {title}
      </h1>

      <p class="max-w-[60ch] text-[clamp(0.95rem,1.3vw,1.05rem)] text-neutral-200">
        {tagline}
      </p>

      <!-- CTAs -->
      <div class="mt-4 flex flex-wrap gap-2">
        <!-- Primary -->
        <a
          href="#work"
          aria-label="Jump to selected work"
          class="inline-flex items-center gap-2 border border-white/20 bg-white/10 px-4 py-2 font-semibold text-white hover:bg-white/15 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-brand-500)]"
        >
          View work
          <span aria-hidden="true">â†’</span>
        </a>

        <!-- Secondary -->
        <a
          href="#contact"
          aria-label="Jump to contact section"
          class="inline-flex items-center gap-2 border border-white/20 bg-transparent px-4 py-2 font-semibold text-white/90 hover:bg-white/10 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-brand-500)]"
        >
          Contact
        </a>
      </div>
    </div>
  </div>
</section>
