---
import { Image } from 'astro:assets';
import heroUrl from '$assets/hero-overlay.jpg';
---
<div class="relative isolate min-h-[70svh] flex items-center justify-center overflow-hidden">
    <Image src={heroUrl} alt="Hero Image" class="absolute inset-0 size-full object-cover opacity-60" />
    <div class="absolute left-4 sm:left-8 top-1/2 -translate-y-1/2 pointer-events-none">
        <span class="[writing-mode:vertical-rl] rotate-180 text-4xl sm:text-6xl font-semibold tracking-widest text-white/90">
            GRAPHICSBYSTORM
        </span>
    </div>
    <div class="relative z-10 text-center px-4">
        <h1 class="text-2xl sm:text-3xl text-neutral-200">
            Design Portfolio
        </h1>
        <p class="mt-2 text-neutal-400">
            Wireframe hero - content TBD
        </p>
    </div>
</div>