---
import BaseLayout from "$layouts/BaseLayout.astro";
import Header from "$components/Header.astro";
---
<BaseLayout title="Not Found — GraphicsByStorm">
  <Header />
  <main class="section-wrap text-center space-y-4">
    <h1 class="heading-2">Page not found</h1>
    <p class="text-neutral-400">The page you’re looking for doesn’t exist.</p>
    <div class="flex items-center justify-center gap-3">
      <a href="/" class="btn-primary">Go home</a>
      <a href="/shop" class="btn-ghost">Visit the Shop</a>
    </div>
  </main>
</BaseLayout>
