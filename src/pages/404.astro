---
import BaseLayout from "$layouts/BaseLayout.astro";
export const prerender = true;
---

<BaseLayout title="Not found • Graphics by Storm">
  <main class="mx-auto max-w-6xl px-4 py-24 text-center text-neutral-200">
    <div
      class="mx-auto mb-6 h-3 w-1.5"
      style="background: var(--color-brand-500,#E2A028);"
    >
    </div>
    <h1
      class="text-[clamp(1.6rem,3vw,2.2rem)] font-extrabold tracking-tight text-white"
    >
      Page not found
    </h1>
    <p class="mt-2 text-neutral-400">
      The page you’re looking for doesn’t exist or has moved.
    </p>
    <div class="mt-6">
      <a
        href="/"
        class="inline-flex items-center bg-[var(--color-brand-500,#E2A028)] px-4 py-2 font-semibold text-black hover:opacity-90"
      >
        Go home
      </a>
    </div>
  </main>
</BaseLayout>
