---
import BaseLayout from "$layouts/BaseLayout.astro";
import Header from "$components/Header.astro";
---
<BaseLayout title="Not Found — GraphicsByStorm">
  <Header />
  <section class="section torn-top torn-angle-left" style="--torn-color: var(--color-surface-950);">
    <div class="section-inner text-center space-y-4">
      <h1 class="heading-2 text-white">Page not found</h1>
      <p class="text-neutral-300">The page you’re looking for doesn’t exist.</p>
      <div class="flex items-center justify-center gap-3">
        <a href="/" class="btn-brand">Go home</a>
        <a href="/shop" class="btn-ghost">Visit the Shop</a>
      </div>
    </div>
  </section>
</BaseLayout>
