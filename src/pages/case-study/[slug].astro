---
import BaseLayout from "$layouts/BaseLayout.astro";
import Header from "$components/Header.astro";

// Minimal example—swap with real CMS/content later
const CASES = [
  { slug: "awoke-gg", title: "Awoke.gg Case Study", summary: "Esports brand refresh with new identity and socials." }
];

const { slug } = Astro.params;
const entry = CASES.find((c) => c.slug === slug);
if (!entry) return Astro.redirect("/#work");
---
<BaseLayout title={`${entry.title} — GraphicsByStorm`}>
  <Header />
  <main class="section-wrap space-y-6">
    <h1 class="heading-2">{entry.title}</h1>
    <p class="text-neutral-300">{entry.summary}</p>

    <article class="prose prose-invert max-w-3xl">
      <p>
        Replace this with your full case study content (goals, constraints, process,
        outcomes, metrics, selects from the gallery, etc.).
      </p>
    </article>

    <a class="link-underline" href="/#work">← Back to Work</a>
  </main>
</BaseLayout>
