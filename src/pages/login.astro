---
export const prerender = false;

import BaseLayout from "$layouts/BaseLayout.astro";
import Header from "$components/Header.astro";

const { user } = Astro.locals;
if (user) return Astro.redirect("/account");
---
<BaseLayout title="Login â€” GraphicsByStorm">
  <Header />
  <section class="section torn-top torn-angle-left" style="--torn-color: var(--color-surface-950);">
    <div class="section-inner">
      <h1 class="heading-2 text-white mb-4">Sign in</h1>
      <form method="post" action="/api/auth/login" class="card p-5 space-y-4 max-w-md">
        <input class="input" type="email" name="email" placeholder="Email" required />
        <input class="input" type="password" name="password" placeholder="Password" required />
        <button class="btn-brand w-full">Sign in</button>
        <p class="text-sm text-neutral-400">
          No account? <a class="link-underline" href="/register">Create one</a>
        </p>
      </form>
    </div>
  </section>
</BaseLayout>
