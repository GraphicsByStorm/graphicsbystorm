---
export const prerender = false;

import BaseLayout from "$layouts/BaseLayout.astro";
import Header from "$components/Header.astro";

const { session } = Astro.locals;
if (session) return Astro.redirect("/account");
---
<BaseLayout title="Login â€” GraphicsByStorm">
  <Header />
  <main class="section-wrap">
    <h1 class="heading-2 mb-4">Login</h1>

    <form method="post" action="/api/auth/login" class="card p-5 space-y-4 max-w-md">
      <input class="input" type="email" name="email" placeholder="Email" required />
      <input class="input" type="password" name="password" placeholder="Password" required />
      <button class="btn-primary w-full">Sign in</button>
      <p class="text-sm text-neutral-400">
        No account? <a class="link-underline" href="/register">Register</a>
      </p>
    </form>
  </main>
</BaseLayout>
