---
import BaseLayout from "$layouts/BaseLayout.astro";
import ContactForm from "$svelte/components/ContactForm.svelte";

const leftRail = "96px";
---

<BaseLayout
  title="Contact • Graphics by Storm"
  description="Start a project or ask a question."
>
  <!-- Hero-like header (contained) -->
  <header class="mx-auto max-w-6xl px-4 pt-10 pb-6 sm:pt-12 sm:pb-7">
    <div class="mb-2 flex items-center gap-2">
      <span
        class="inline-block h-3 w-1.5 translate-y-[2px]"
        style="background: var(--color-brand-500,#E2A028);"></span>
      <h1
        class="text-[clamp(1.35rem,2.6vw,1.8rem)] font-extrabold tracking-tight"
      >
        Contact
      </h1>
    </div>
    <p class="max-w-[70ch] text-neutral-300">
      Share a few details about your project and I’ll follow up with next steps.
      You can also email me directly.
    </p>
  </header>

  <!-- Filmstrip-styled form block (clears social rail via margin-left) -->
  <div class="mx-auto max-w-6xl px-0 pb-16">
    <ContactForm client:load leftRail={leftRail} />
  </div>
</BaseLayout>
