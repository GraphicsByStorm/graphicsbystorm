---
import BaseLayout from "$layouts/BaseLayout.astro";
import Header from "$components/Header.astro";
---
<BaseLayout title="Payment Successful — GraphicsByStorm">
  <Header />
  <section class="section torn-top torn-angle-right" style="--torn-color: var(--color-surface-950);">
    <div class="section-inner text-center space-y-4">
      <h1 class="heading-2 text-white">Thanks — Payment received</h1>
      <p class="text-neutral-300">
        You’ll get a confirmation email shortly. Your order will appear on the
        <a class="link-underline" href="/orders">orders</a> page.
      </p>
      <div class="flex items-center justify-center gap-3">
        <a class="btn-brand" href="/orders">View orders</a>
        <a class="btn-ghost" href="/shop">Continue shopping</a>
      </div>
    </div>
  </section>
</BaseLayout>
