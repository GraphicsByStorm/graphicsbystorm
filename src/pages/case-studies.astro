---
import { WORKS } from '../lib/data/work';
export const prerender = true;
---

<html lang="en">
  <body class="bg-[var(--surface-1,#0b0b0b)] text-neutral-100">
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h1 class="text-3xl sm:text-4xl font-extrabold tracking-tight text-white mb-6">
        <span class="mr-2 inline-block h-4 w-1.5 translate-y-[2px] rounded-full" style="background: var(--color-brand-500,#E2A028);"></span>
        Case Studies
      </h1>
      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {WORKS.map((c) => (
          <a href={`/case-study/${c.slug}`} class="block rounded-xl border border-white/10 bg-white/5 p-4 hover:opacity-95 transition">
            <h2 class="text-lg font-semibold text-white">{c.title}</h2>
            <p class="text-neutral-300 mt-1">{c.summary}</p>
            <span class="mt-3 inline-block underline decoration-[var(--color-brand-500,#E2A028)] underline-offset-4">Read more â†’</span>
          </a>
        ))}
      </div>
    </section>
  </body>
</html>
