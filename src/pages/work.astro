---
import BaseLayout from "$layouts/BaseLayout.astro";

// Svelte “islands”
import WorkSection from "$svelteSec/WorkSection.svelte";

// Data
import { WORKS } from "$lib/data/work";
import { WORK_META } from "$lib/data/workMeta";

const items = WORKS.map((w) => ({ ...w, ...WORK_META[w.slug] }));

export const prerender = true;
---

<BaseLayout
  title="Work • GraphicsByStorm"
  description="Selected work and case studies"
>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <WorkSection items={items} client:load />
  </main>
</BaseLayout>
