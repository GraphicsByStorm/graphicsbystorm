{
  "extends": "astro/tsconfigs/strict",
  "include": ["src", "astro.config.*", "svelte.config.*", "src/types"],
  "exclude": ["dist", "src/content/**"],           // â¬… add this
  "compilerOptions": {
    "moduleResolution": "bundler",
    "types": ["astro/client"],                     // no astro/content here
    "baseUrl": ".",
    "paths": {
      "$pages/*": ["src/pages/*"],
      "$components/*": ["src/components/*"],
      "$compSec/*": ["src/components/sections/*"],
      "$layouts/*": ["src/layouts/*"],
      "$lib/*": ["src/lib/*"],
      "$svelte/*": ["src/svelte/*"],
      "$svelteSec/*": ["src/svelte/sections/*"],
      "$styles/*": ["src/styles/*"],
      "$assets/*": ["src/assets/*"]
    },
    "skipLibCheck": true
  }
}
